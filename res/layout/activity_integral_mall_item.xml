<?xml version="1.0" encoding="utf-8"?>
<com.schytd.discount.ui.View.LayoutRipple xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="170dp"
    android:background="#FFFFFF"
    android:orientation="vertical"
    app:before_color="#ffffff" >

    <TextView
        android:id="@+id/commodity_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="惠消费"
        android:textColor="#939393" />

    <TextView
        android:id="@+id/commodity_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="¥500"
        android:textColor="#F37723" />

    <ImageView
        android:id="@+id/commodity_picture"
        android:layout_width="170dp"
        android:layout_height="115dp"
        android:layout_margin="5dp"
        android:src="@drawable/gridview_default" />

</com.schytd.discount.ui.View.LayoutRipple>