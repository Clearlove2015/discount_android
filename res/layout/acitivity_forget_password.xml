<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Indigo_nav_color"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/toolbar_bg"
            android:gravity="center_vertical"
            android:padding="@dimen/x2" >

            <com.schytd.discount.ui.View.ButtonIcon
                android:id="@+id/activity_forgetpassword_back"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x5"
                android:background="@color/white"
                android:clickable="true"
                android:contentDescription="@string/action_settings"
                android:gravity="center"
                android:onClick="onClick"
                app:iconDrawable="@drawable/titlebar_btn_back" />

            <TextView
                android:id="@+id/login_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/forget_psd_title"
                android:textColor="@color/white"
                android:textSize="@dimen/x17" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#39A79E" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/linear_shape"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/alter_phone_num"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y32"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/x2"
            android:background="@drawable/editview_shape"
            android:hint="请输入手机号码"
            android:inputType="numberDecimal"
            android:paddingLeft="@dimen/x10"
            android:singleLine="true"
            android:textColorHint="#898989"
            android:textSize="@dimen/x12" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dfdfdf" />

        <EditText
            android:id="@+id/new_phone_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y32"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/x2"
            android:background="@drawable/editview_shape"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/x10"
            android:singleLine="true"
            android:textColorHint="#898989"
            android:textSize="@dimen/x12" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dfdfdf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y32"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/x2" >

            <EditText
                android:id="@+id/alter_sms_code"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y32"
                android:layout_margin="@dimen/x3"
                android:layout_weight="1"
                android:background="@drawable/editview_shape"
                android:hint="短信验证码"
                android:paddingLeft="@dimen/x10"
                android:inputType="numberSigned"
                android:singleLine="true"
                android:textColorHint="#898989"
                android:textSize="@dimen/x12" />

            <Button
                android:id="@+id/alter_btn_getCode"
                android:layout_width="@dimen/x150"
                android:layout_margin="@dimen/x2"
                android:layout_height="wrap_content"
                android:background="@drawable/register_btn_selector"
                android:text="获取验证码"
                android:textColor="@color/Indigo_nav_color"
                android:textSize="@dimen/x12" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_alter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y35"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/y20"
        android:background="@drawable/bg_selector_login"
        android:text="确定修改"
        android:textColor="@color/white"
        android:textSize="@dimen/x15" >
    </Button>

</LinearLayout>